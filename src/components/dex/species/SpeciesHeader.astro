---
import TypeBadge from "../../../components/ui/TypeBadge.astro";

import { getAltName } from "../../functions/pokemon.ts";

const { pkmn } = Astro.props

const pkmnAltName = getAltName(pkmn["Species Name"])
---  
<div class="card bg-base-200 text-neutral-content border-base-300 rounded-box border w-full md:w-auto flex-1">
    <div class="card-body p-[15px]">
        <div class="flex h-full justify-center gap-2 items-center flex-wrap">
            <h1 class="text-2xl font-semibold tracking-wider mr-[50px]">{pkmnAltName}</h1>
            <div class="flex gap-2">
                { pkmn["Type1"] && <TypeBadge typeName={ pkmn["Type1"] } /> }
                { pkmn["Type2"] && <TypeBadge typeName={ pkmn["Type2"] } /> }   
            </div>
        </div>        
    </div>
</div>     