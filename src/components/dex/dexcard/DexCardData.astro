---
import TypeBadge from "../../ui/TypeBadge.astro";

import { getAltName } from '../../functions/pokemon.ts';

const { pkmn } = Astro.props
---
<div class="flex flex-col flex-1">
    <div class="flex flex-1 justify-around content-center items-center">
        <h1 class="text-center font-semibold tracking-wide text-xl mb-[5px]">{ getAltName(pkmn["Species Name"]) }</h1>
    </div>
    <div class="flex flex-1 justify-around content-center items-center">
        { pkmn["Type1"] && <TypeBadge typeName={ pkmn["Type1"] } /> }
        { pkmn["Type2"] && <TypeBadge typeName={ pkmn["Type2"] } /> }
    </div>
</div>