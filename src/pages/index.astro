---
import Layout from '../layouts/Layout.astro';
import SearchFilters from '../components/dex/SearchFilters.astro';
import DexCard from '../components/dex/dexcard/DexCard.astro'; 

import { listPkmn } from '../components/functions/pokemon.ts';
---
<Layout>
    <div class="p-[25px]">
        <SearchFilters/>
        <div id="pokemonList" class="flex flex-wrap justify-center gap-[20px]">
            {listPkmn().map((pkmn: any) => {
                return (
                    <DexCard pkmn={pkmn} />
                )
            } )}
        </div>  
    </div>
</Layout>